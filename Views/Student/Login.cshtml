@model Students_Interest_System.Models.User
@{
    ViewData["Title"] = "Login";
}
@if (TempData["message"] != null)
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.success('@TempData["message"]');
        });
    </script>
}

@if (TempData["warning"] != null)
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.warning('@TempData["warning"]');
        });
    </script>
}
@if (TempData["alert"] != null)
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.error('@TempData["alert"]');
        });
    </script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: #17a2b8;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .login-btn {
            background-color: #28a745;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .login-btn:hover {
                background-color: #218838;
            }

        .anchor {
            display: block;
            margin-top: 20px;
            color: #007bff;
            text-decoration: none;
        }

            .anchor:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row mt-lg-5">
            <div class="col-4 offset-4">
                <div class="text-xl-center">
                    <h1 class="text-info">Login</h1>
                </div>
                <form method="post" asp-action="Login">
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input type="text" placeholder="Enter username" asp-for="Username" class="form-control" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Login</button>
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <p style="color: red;">@ViewBag.ErrorMessage</p>
                        }
                    </div>
                </form>
                <a class="anchor" href="/Student/Signup">Register Now?</a>
            </div>
        </div>
    </div>
</body>
</html>

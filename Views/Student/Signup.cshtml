@model Students_Interest_System.Models.User
@{
    ViewData["Title"] = "SignUp";
}
@if (TempData["alert"] != null)
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.error('@TempData["alert"]');
        });
    </script>
}

@if (TempData["warning"] != null)
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            toastr.warning('@TempData["warning"]');
        });
    </script>
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <style>
        /* Add your custom styles here */
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: #17a2b8;
        }

        .form-group {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row mt-lg-5">
            <div class="col-6 offset-3">
                <div class="text-xl-center">
                    <h1 class="text-info">User Registration</h1>
                </div>
                <form method="post" asp-action="SignUp">
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input type="text" placeholder="Enter username" asp-for="Username" class="form-control" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control" autocomplete="off" />
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-success btn-lg mb-1 float-lg-start" value="Register" />
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <p style="color: red;">@ViewBag.ErrorMessage</p>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
